{
  "meta": {
    "name": "Decentralized Deep Artificial Neural Networks in COINSTAC (CPU capability only)",
    "id": "coinstac-sparse-dinunet",
    "version": "v1.0.3",
    "repository": "https:\/\/github.com\/trendscenter\/dinunet_implementations.git",
    "description": "NN implementations in COINSTAC for task that can be run in CPU only. Please use GPU version for GPU acceleration.",
    "compspecVersion": 2
  },
  "computation": {
    "type": "docker",
    "dockerImage": "coinstacteam/coinstac-sparse-dinunet",
    "command": [
      "python"
    ],
    "remote": {
      "type": "docker",
      "dockerImage": "coinstacteam/coinstac-sparse-dinunet",
      "command": [
        "python"
      ]
    },
    "input": {
      "data": {
        "label": "Data",
        "type": "files",
        "items": [
          "Files"
        ],
        "extensions": [
          "csv",
          "txt",
          "npy",
          "npz",
          "json"
        ],
        "source": "member",
        "order": 2
      },
      "task_id": {
        "default": "FS-Classification",
        "values": [
          "FS-Classification",
          "ICA-Classification"
        ],
        "label": "Pick a NN task:",
        "type": "select",
        "source": "owner",
        "group": "NN Params",
        "order": 3
      },
      "mode": {
        "default": "train",
        "values": [
          "train",
          "test"
        ],
        "label": "NN Mode:",
        "type": "select",
        "source": "owner",
        "group": "NN Params",
        "order": 4
      },
      "agg_engine": {
        "default": "dSGD",
        "values": [
          "dSGD",
          "rankDAD",
          "powerSGD"
        ],
        "label": "Pick aggregation engine:",
        "type": "select",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 5
      },
      "rankDAD_args": {
        "default": {
          "dad_reduction_rank": 10,
          "dad_num_pow_iters": 5,
          "dad_tol": 0.001
        },
        "label": "RankDAD engine parameters.",
        "type": "object",
        "source": "owner",
        "group": "NN Params",
        "conditional": {
          "variable": "agg_engine",
          "value": "rankDAD"
        },
        "order": 6
      },
      "powerSGD_args": {
        "default": {
          "matrix_approximation_rank": 1,
          "start_powerSGD_iter": 10,
          "use_error_feedback": true,
          "warm_start": true
        },
        "label": "PowerSGD engine parameters.",
        "type": "object",
        "source": "owner",
        "group": "NN Params",
        "conditional": {
          "variable": "agg_engine",
          "value": "powerSGD"
        },
        "order": 7
      },
      "num_reducers": {
        "default": 2,
        "label": "Number of local reducers:",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 8
      },
      "batch_size": {
        "default": 16,
        "label": "Batch size:",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 9
      },
      "local_iterations": {
        "default": 1,
        "label": "Local gradient accumulation iterations(effective batch size = batch size * gradient accumulation iterations)",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 10
      },
      "learning_rate": {
        "default": 0.001,
        "label": "Learning rate:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 11
      },
      "epochs": {
        "default": 51,
        "label": "Epochs:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 12
      },
      "pretrain": {
        "default": false,
        "label": "Use the site with maximum data to pre-train locally as starting point:",
        "type": "boolean",
        "source": "owner",
        "group": "NN Params",
        "order": 13
      },
      "pretrain_args": {
        "default": {
          "epochs": 0,
          "learning_rate": 0.001,
          "batch_size": 16,
          "local_iterations": 1,
          "validation_epochs": 1,
          "pin_memory": false,
          "num_workers": 0,
          "patience": 51
        },
        "label": "Pretraining arguments:",
        "type": "object",
        "source": "owner",
        "conditional": {
          "variable": "pretrain",
          "value": true
        },
        "group": "NN Params",
        "order": 14
      },
      "validation_epochs": {
        "default": 1,
        "label": "Run validation after every epochs:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 15
      },
      "precision_bits": {
        "default": "32",
        "label": "Floating point precision for payload:",
        "type": "select",
        "values": [
          "32",
          "16"
        ],
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 16
      },
      "pin_memory": {
        "default": false,
        "label": "Pin Memory:",
        "type": "boolean",
        "source": "member",
        "group": "NN Params",
        "order": 18
      },
      "num_workers": {
        "default": 0,
        "label": "Number of workers:",
        "type": "number",
        "source": "member",
        "group": "NN Params",
        "order": 19
      },
      "patience": {
        "default": 51,
        "label": "Early stopping patience epochs:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 20
      },
      "split_ratio": {
        "default": [
          0.7,
          0.15,
          0.15
        ],
        "label": "Data split ratio for train, validation, test in the same order:",
        "type": "object",
        "source": "owner",
        "group": "NN Params",
        "order": 21
      },
      "num_folds": {
        "default": 0,
        "label": "Number of folds for K-Fold Cross Validation(Mutually exclusive with split ratio):",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 22
      },
      "FS-Classification_args": {
        "default": {
          "input_size": 66,
          "hidden_sizes": [
            256,
            128,
            64,
            32
          ],
          "num_class": 2,
          "monitor_metric": "auc",
          "metric_direction": "maximize",
          "log_header": "Loss|AUC",
          "split_files": []
        },
        "label": "FreeSurfer classification parameters.",
        "type": "object",
        "source": "owner",
        "group": "Computation",
        "conditional": {
          "variable": "task_id",
          "value": "FS-Classification"
        },
        "order": 23
      },
      "FS-Classification_data_conf": {
        "default": {
          "labels_file": "covariates.csv",
          "data_column": "freesurferfile",
          "labels_column": "isControl"
        },
        "label": "FreeSurfer classification data config.",
        "type": "object",
        "source": "member",
        "group": "Computation",
        "conditional": {
          "variable": "task_id",
          "value": "FS-Classification"
        },
        "order": 24
      },
      "ICA-Classification_args": {
        "default": {
         "num_class": 2,
          "monitor_metric": "auc",
          "metric_direction": "maximize",
          "log_header": "Loss|AUC",
          "num_components": 100,
          "temporal_size": 980,
          "window_size": 10,
          "window_stride": 10,
          "split_files": [],
          "input_size": 256,
          "hidden_size": 384
        },
        "label": "ICA classification parameters.",
        "type": "object",
        "source": "owner",
        "conditional": {
          "variable": "task_id",
          "value": "ICA-Classification"
        },
        "group": "Computation",
        "order": 27
      },
      "ICA-Classification_data_conf": {
        "default": {
          "data_file": "data.npz",
          "labels_file": "labels.csv"
        },
        "label": "ICA classification data config.",
        "type": "object",
        "source": "member",
        "conditional": {
          "variable": "task_id",
          "value": "ICA-Classification"
        },
        "group": "Computation",
        "order": 28
      }
    },
    "output": {
    },
    "display": {
      "type": "string"
    }
  }
}
